@model List<Product>
@{

}

<h2 class="text-center mb-5">list of product</h2>

<div class="row mb-5">
	<div class="col">
		<a class="btn btn-primary" asp-controller="Product" asp-action="Create">New Product</a>
		</div>
		<div class="col">

		</div>

</div >

<table border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Price</th>
            <th>Image</th>
            <th>Create At</th>
            <th>Action</th>
        </tr>
        </thead>
    </table>

<tbody>
    @foreach (var product in Model){
        <td>@product.Id</td>
        <td>@product.Name</td>
        <td>@product.Brand</td>
        <td>@product.Category</td>
        <td>(@product.Price)</td>
        
    }

</tbody>

