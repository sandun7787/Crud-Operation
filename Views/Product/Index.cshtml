@model List<Product>
@{

}

<h2 class="text-center mb-5">list of product</h2>

<div class="row mb-5">
	<div class="col">
		<a class="btn btn-primary" asp-controller="Product" asp-action="Create">New Product</a>
		</div>
		<div class="col">

		</div>

</div >

<table border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Price</th>
            <th>Image</th>
            <th>Create At</th>
            <th>Action</th>
        </tr>
        </thead>
    </table>

<tbody>
    @foreach (var product in Model){
     <tr>
        <td>@product.Id</td>
        <td>@product.Name</td>
        <td>@product.Brand</td>
        <td>@product.Category</td>
        <td>(@product.Price)</td>
        <td><img src="/product/@product.ImageFileName" width="100"/></td>
        <td>@product.CreateAt.ToString("MM/dd/yyyy")</td>
        <td style="white-space:nowrap">
             <a class="btn btn-primary btn-sm" asp-controller="products" asp-action="Edit"
              asp-rout-id="@product.Id">Edite</a>

                <a class="btn btn-danger btn-sm" asp-controller="products" asp-action="Delete"
                   asp-rout-id="@product.Id">Delete</a>


        </td>
    </tr>
    }
     
</tbody>

